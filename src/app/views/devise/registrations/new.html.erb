<section class="page-section" id="contact">

  <div class="container" style="background-color:#dfa130; border-radius:30px; padding:3%; margin-top:-2%; margin-bottom:auto">
    <!-- Contact Section Heading-->
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">s'inscrire</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
      <div class="divider-custom-line"></div>
      <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
      <div class="divider-custom-line"></div>
    </div>

<div class="col-lg-6 col-md-6 mx-auto text-white">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Nom_d_Utilisateur %><br />
    <%= f.text_field :username,  autofocus: true, autocomplete: "Nom d'utilisateur", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :Mot_de_passe %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractÃ¨res minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :Confirmer_Mot_de_Passe %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Confirmer mot de passe", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "S'inscrire", class: "btn btn-l text-white", style: "background-color: #028AD3;"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  </div>
  </div>
</section>