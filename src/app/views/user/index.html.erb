<section class="page-section">

  <div class="container" style="background-color:#dfa130; border-radius:30px; padding:3%; margin-top:-1%; margin-bottom:-3%">
    <!-- Contact Section Heading-->
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Utilisateurs</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
      <div class="divider-custom-line"></div>
      <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
      <div class="divider-custom-line"></div>
    </div>

    <% if (@users.present?) %>
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <th>Id</th>
                <th>Email</th>
                <th>Nom d'utilisateur</th>
                <th>RÃ´le</th>
                <th colspan="3">Action</th>
            </thead>

            <tbody>
            <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td><%= user.role %></td>
                <td><%= link_to("Supprimer", user, method: :delete, data: { confirm: "Supprimer ?"})%></td>
            </tr>
            <% end %>
            </tbody>
        </table>
    <% end %>
</div>