<%= form_with(model: film, local: true) do |form| %>
  <% if film.errors.any? %>
    <div id="error_explanation">
	  <h2> There is <%= pluralize(film.errors.count, "error") %>

	  <ul>
        <% film.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
	  </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :director %>
    <%= form.text_field :director %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.text_field :duration %>
  </div>

  <div class="field">
    <%= form.label :genre_id %>
    <%= form.select :genre_id, Genre.all.collect { |genre| [ genre.name, genre.id ] }, include_blank: false %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

