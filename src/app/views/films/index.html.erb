<p><%= notice %> </p>

<h1>Films</h1>
<table>
    <thead>
        <th>Title</th>
        <th>Description</th>
        <th>Director</th>
        <th>Duration</th>
        <th colspan="3">Action</th>
    </thead>

    <tbody>
    <% @films.each do |film| %>
        <td><%= film.title %></td>
        <td><%= film.description %></td>
        <td><%= film.director %></td>
        <td><%= film.duration %></td>
        <td><%= link_to("Show", film)%></td>
        <td><%= link_to("Edit", edit_film_path(film))%></td>
        <td><%= link_to("Delete", film, method: :delete, data: { confirm: "Supprimer ?"})%></td>
    <% end %>
    </tbody>
</table>

<%= link_to "New film", new_film_path %>