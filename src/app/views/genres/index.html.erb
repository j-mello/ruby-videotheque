<section class="page-section" id="contact">

  <div class="container" style="background-color:white; border:black;border-radius:30px; padding:3%; margin-top:-3%; margin-bottom:-3%; color:white;">
    <!-- Contact Section Heading-->
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Genres</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
      <div class="divider-custom-line"></div>
      <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
      <div class="divider-custom-line"></div>
    </div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to 'Voir', genre %></td>
          <td><%= link_to 'Modifier', edit_genre_path(genre) %></td>
          <td><%= link_to 'Supprimer', genre, method: :delete, data: { confirm: 'Vous en êtes sûr ? Vraiment ? Réfléchissez avant de faire ça !!!' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


  <%= link_to 'New Genre', new_genre_path %>
  <%= link_to 'Films', films_path %>
</div>
</section>