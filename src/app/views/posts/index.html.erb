<p><%= notice %> </p>

<h1>Posts</h1>
<table>
    <thead>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3">Action</th>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to("Show", post)%></td>
        <td><%= link_to("Edit", edit_post_path(post))%></td>
        <td><%= link_to("Delete", post, method: :delete, data: { confirm: "Supprimer ?"})%></td>
    <% end %>
    </tbody>
</table>

<%= link_to "New post", new_post_path %>